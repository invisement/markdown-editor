{
	"name": "pocket-editor",
	"description": "Blazingly fast block style wysiwyg editor that returns markdown",
	"version": "2.1.1",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "Victor Azevedo",
	"license": "MIT",
	"type": "module",
	"repository": {
		"url": "git+ssh://git@github.com/victrme/pocket-editor.git"
	},
	"keywords": [
		"wysiwyg",
		"contenteditable",
		"text editor",
		"rich text"
	],
	"scripts": {
		"build": " esbuild ./src/**/*.ts --outdir=./dist && esbuild ./src/style.css --outdir=./dist && tsc",
		"test": "npx playwright test",
		"test:ui": "npx playwright test --ui",
		"dev": "pnpm --filter example dev",
		"preview": "pnpm --filter example preview"
	},
	"devDependencies": {
		"@playwright/test": "^1.45.0",
		"esbuild": "^0.23.0"
	},
	"files": [
		"./dist/**/*.js",
		"./dist/index.d.ts",
		"./dist/style.css"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./style.css": "./dist/style.css"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"printWidth": 112,
		"semi": false
	},
	"packageManager": "pnpm@8.15.4"
}

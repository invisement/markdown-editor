{
	"name": "pocket-editor",
	"description": "Blazingly fast block style wysiwyg editor that returns markdown",
	"version": "1.10.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "Victor Azevedo",
	"license": "MIT",
	"type": "module",
	"repository": {
		"url": "git+ssh://git@github.com/victrme/pocket-editor.git"
	},
	"keywords": [
		"wysiwyg",
		"contenteditable",
		"text editor",
		"rich text"
	],
	"scripts": {
		"build": "tsc",
		"test": "npx playwright test",
		"test:ui": "npx playwright test --ui",
		"dev": "pnpm --filter example dev",
		"preview": "pnpm --filter example preview"
	},
	"devDependencies": {
		"@playwright/test": "^1.41.2",
		"typescript": "^5.3.3"
	},
	"files": [
		"/dist"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"printWidth": 112,
		"semi": false
	}
}

{
	"compilerOptions": {
		"target": "es2018",
		"module": "ESNext",
		"types": ["node", "jest"],
		"lib": ["ESNext", "DOM"],
		"outDir": "dist",
		"strict": true,
		"declaration": true,
		"removeComments": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"useDefineForClassFields": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "example", "**/*.test.*"]
}
